general {
        interval = 5
        colors=true
}

order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"


load {
        format = "%1min:%5min:%15min"
}

cpu_temperature 0 {
        format = "T0 %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

memory {
        format = "M: %used/%total"
}

wireless _first_ {
        format_up = "W: %ip %"
        format_down = "W: down"
}

disk "/" {
        format = "D: %used/%total"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
